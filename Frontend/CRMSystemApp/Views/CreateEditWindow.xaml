<Window x:Class="CRMSystemApp.Views.CreateEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRMSystemApp.Views"
        mc:Ignorable="d"
        Height="750"
        Width="500"
        SnapsToDevicePixels="True"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <!--// Fade-in Effect \\-->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1" Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <!--// Create & Edit Window \\-->
    <Border
        CornerRadius="20"
        Background="{DynamicResource AccountWindowBackgroundBrush}"
        BorderThickness="2"
        BorderBrush="{DynamicResource AccountWindowBorderBrush}"
        SnapsToDevicePixels="True">

        <Grid>

            <!--// Create & Edit Window Markup \\-->
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--// Top Bar Section \\-->
            <Border
                Grid.Row="0"
                Background="{DynamicResource TopBarBackgroundBrush}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderBrushColor}"
                SnapsToDevicePixels="True"
                MouseDown="MoveWindow_MouseDown">

                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

                    <!--// Minimize Window \\-->
                    <Button
                        Style="{StaticResource MinimizeStyle}"
                        Height="42"
                        Width="42"
                        Click="MinimizeWindow_Click"/>

                    <!--// Close Window \\-->
                    <Button
                        Style="{StaticResource CloseStyle}"
                        Height="42"
                        Width="42"
                        Click="CloseWindow_Click"/>

                </StackPanel>

            </Border>

            <!--// Window Name \\-->
            <TextBlock x:Name="CreateEditWindowTitle"
                Grid.Row="0"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{DynamicResource PhotoTextBrush}"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Style="{StaticResource InfoTextBlockStyle}"
                SnapsToDevicePixels="True"/>

            <!--// Main Content Section \\-->
            <ContentControl x:Name="CreateEditContent"
                Grid.Row="1"/>

        </Grid>

    </Border>

</Window>