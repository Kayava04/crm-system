<UserControl x:Class="CRMSystemApp.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRMSystemApp.Views"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             Background="Transparent"
             BorderThickness="0"
             SnapsToDevicePixels="True">

    <!--// Finance Report View \\-->
    <Border 
        CornerRadius="10" 
        Margin="20" 
        Padding="10"
        Background="{DynamicResource InputTextForegroundBrush}"
        SnapsToDevicePixels="True">

        <!--// Main Content \\-->
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--// Students Income \\-->
            <lvc:CartesianChart
                Grid.Row="0"
                Series="{Binding StudentIncomeSeries}" 
                LegendLocation="Right" 
                Margin="0,0,0,20"
                Foreground="{DynamicResource RegisterLoginForegroundBrush}">

                <lvc:CartesianChart.DataTooltip>

                    <lvc:DefaultTooltip
                        Foreground="{DynamicResource RegisterLoginBackgroundBrush}"
                        FontSize="16"/>

                </lvc:CartesianChart.DataTooltip>

                <lvc:CartesianChart.AxisX>

                    <lvc:Axis
                        Title="Students"
                        Labels="{Binding StudentLabels}"
                        Foreground="{DynamicResource RegisterLoginForegroundBrush}"
                        FontSize="18"/>

                </lvc:CartesianChart.AxisX>

                <lvc:CartesianChart.AxisY>

                    <lvc:Axis
                        Title="Ammount (₴)"
                        MinValue="0"
                        LabelFormatter="{Binding MoneyFormatter}"
                        Foreground="{DynamicResource RegisterLoginForegroundBrush}"
                        FontSize="18"/>

                </lvc:CartesianChart.AxisY>

            </lvc:CartesianChart>

            <!--// School Income \\-->
            <lvc:CartesianChart
                Grid.Row="1"
                Series="{Binding SchoolIncomeSeries}" 
                LegendLocation="Right"
                Foreground="{DynamicResource RegisterLoginForegroundBrush}">

                <lvc:CartesianChart.DataTooltip>

                    <lvc:DefaultTooltip
                        Foreground="{DynamicResource RegisterLoginBackgroundBrush}"
                        FontSize="16"/>

                </lvc:CartesianChart.DataTooltip>

                <lvc:CartesianChart.AxisX>

                    <lvc:Axis
                        Title="School"
                        Labels="{Binding SchoolLabels}"
                        Foreground="{DynamicResource RegisterLoginForegroundBrush}"
                        FontSize="18"/>

                </lvc:CartesianChart.AxisX>

                <lvc:CartesianChart.AxisY>

                    <lvc:Axis
                        Title="Ammount (₴)"
                        LabelFormatter="{Binding MoneyFormatter}"
                        FontSize="18"
                        Foreground="{DynamicResource RegisterLoginForegroundBrush}"/>

                </lvc:CartesianChart.AxisY>

            </lvc:CartesianChart>

        </Grid>

    </Border>

</UserControl>