<Window x:Class="CRMSystemApp.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRMSystemApp.Views"
        mc:Ignorable="d"
        Height="750"
        Width="500"
        SnapsToDevicePixels="True"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <!--// Fade-in Effect \\-->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1" Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <!--// Register Window \\-->
    <Border
        CornerRadius="20"
        Background="{DynamicResource AccountWindowBackgroundBrush}"
        BorderThickness="2"
        BorderBrush="{DynamicResource AccountWindowBorderBrush}"
        SnapsToDevicePixels="True">

        <Grid>

            <!--// Register Window Markup \\-->
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--// Top Bar Section \\-->
            <Border
                Grid.Row="0"
                Background="{DynamicResource TopBarBackgroundBrush}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderBrushColor}"
                SnapsToDevicePixels="True">

                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

                    <!--// Minimize Window \\-->
                    <Button
                        Style="{StaticResource MinimizeStyle}"
                        Height="42"
                        Width="42"
                        Click="MinimizeWindow_Click"/>

                    <!--// Close Window \\-->
                    <Button
                        Style="{StaticResource CloseStyle}"
                        Height="42"
                        Width="42"
                        Click="CloseWindow_Click"/>

                </StackPanel>

            </Border>

            <!--// Window Name \\-->
            <TextBlock
                Grid.Row="0"
                Text="Registration"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{DynamicResource PhotoTextBrush}"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Style="{StaticResource InfoTextBlockStyle}"
                SnapsToDevicePixels="True"/>

            <!--// Main Content Section \\-->
            <Grid
                Grid.Row="1"
                Margin="0,50"
                Background="Transparent"
                SnapsToDevicePixels="True">

                <!--// Input Data \\-->
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <!--// FullName \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,5">

                        <TextBlock
                            Text="Full Name:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <TextBox x:Name="RegisterFullNameTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>

                    </StackPanel>

                    <!--// Birth Date \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,5">

                        <TextBlock
                            Text="Birth Date:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <DatePicker x:Name="RegisterBirthDateSelector"
                            SelectedDate=""
                            Width="250"
                            Height="35"
                            Margin="0,10,0,0"
                            Style="{StaticResource BirthDateStyle}"/>

                    </StackPanel>

                    <!--// Email \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,5">

                        <TextBlock
                            Text="Email:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <TextBox x:Name="RegisterEmailTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>

                    </StackPanel>

                    <!--// Username \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,5">

                        <TextBlock
                            Text="Username:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <TextBox x:Name="RegisterUsernameTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>

                    </StackPanel>

                    <!--// Password \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,5">

                        <TextBlock
                            Text="Password:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <PasswordBox x:Name="RegisterPasswordTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputPasswordStyle}"/>

                    </StackPanel>

                    <!--// Confirm Password \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,5">

                        <TextBlock
                            Text="Confirm Password:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <PasswordBox x:Name="RegisterConfirmPasswordTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputPasswordStyle}"/>

                    </StackPanel>

                    <!--// Functional Panel \\-->
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,5,0">

                        <!--// Turn Back Button \\-->
                        <Button
                            Margin="0,0,5,0"
                            Style="{StaticResource BackStyle}"
                            Click="TurnBackButton_Click"/>

                        <!--// Register Button \\-->
                        <Button
                            Style="{StaticResource RegisterStyle}"
                            Click="RegisterButton_Click"/>

                    </StackPanel>

                </StackPanel>

            </Grid>

        </Grid>

    </Border>

</Window>