<UserControl x:Class="CRMSystemApp.Views.StudentCreateEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRMSystemApp.Views"
             mc:Ignorable="d" 
             Height="710"
             Width="600"
             Background="Transparent"
             BorderThickness="0"
             SnapsToDevicePixels="True">

    <!--// Student Create & Edit View \\-->
    <Border
        Background="Transparent"
        SnapsToDevicePixels="True">

        <!--// Main Content Section \\-->
        <Grid
            Grid.Row="1"
            Margin="0"
            Background="Transparent"
            SnapsToDevicePixels="True">

            <!--// Input Data \\-->
            <StackPanel
                Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <!--// Parent FullName + FullName \\-->
                <StackPanel
                    Orientation="Horizontal">

                    <!--// Parent FullName \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,0,5,0">

                        <TextBlock
                            Text="Parent Full Name:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <TextBox x:Name="StudentCreateEditParentFullNameTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>

                    </StackPanel>

                    <!--// FullName \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="10,0,0,0">

                        <TextBlock
                            Text="Full Name:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <TextBox x:Name="StudentCreateEditFullNameTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>

                    </StackPanel>

                </StackPanel>

                <!--// Birth Date + Grade \\-->
                <StackPanel
                    Orientation="Horizontal">

                    <!--// Birth Date \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,5,5,0">

                        <TextBlock
                            Text="Birth Date:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <DatePicker x:Name="StudentCreateEditBirthDateSelector"
                            SelectedDate=""
                            Width="250"
                            Height="35"
                            Margin="0,10,0,0"
                            Style="{StaticResource BirthDateStyle}"/>

                    </StackPanel>

                    <!--// Grade \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="10,5,0,0">

                        <TextBlock
                            Text="Grade:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <TextBox x:Name="StudentCreateEditGradeTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>

                    </StackPanel>

                </StackPanel>

                <!--// Email + Phone \\-->
                <StackPanel
                    Orientation="Horizontal">

                    <!--// Email \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,5,5,0">

                        <TextBlock
                            Text="Email:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <TextBox x:Name="StudentCreateEditEmailTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>

                    </StackPanel>

                    <!--// Phone \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="10,5,0,0">

                        <TextBlock
                            Text="Phone:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <TextBox x:Name="StudentCreateEditPhoneTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>

                    </StackPanel>

                </StackPanel>

                <!--// Language + Level \\-->
                <StackPanel
                    Orientation="Horizontal">

                    <!--// Language \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,5,5,0">

                        <TextBlock
                            Text="Language:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <TextBox x:Name="StudentCreateEditLanguageTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>

                    </StackPanel>

                    <!--// Level \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="10,5,0,0">

                        <TextBlock
                            Text="Level:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <TextBox x:Name="StudentCreateEditLevelTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>

                    </StackPanel>

                </StackPanel>

                <!--// Group + Lesson Days \\-->
                <StackPanel
                    Orientation="Horizontal">

                    <!--// Group \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,5,5,0">

                        <TextBlock
                            Text="Group:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <TextBox x:Name="StudentCreateEditGroupTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>

                    </StackPanel>

                    <!--// Lesson Days \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="10,5,0,0">

                        <TextBlock
                            Text="Lesson Days:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <TextBox x:Name="StudentCreateEditLessonDaysTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>

                    </StackPanel>

                </StackPanel>

                <!--// Pair Number + Sign Date \\-->
                <StackPanel
                    Orientation="Horizontal">

                    <!--// Pair Number \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,5,5,0">

                        <TextBlock
                            Text="Pair:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <TextBox x:Name="StudentCreateEditPairTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>

                    </StackPanel>

                    <!--// Sign Date \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="10,5,0,0">

                        <TextBlock
                            Text="Sign Date:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <DatePicker x:Name="StudentCreateEditSignDateSelector"
                            SelectedDate=""
                            Width="250"
                            Height="35"
                            Margin="0,10,0,0"
                            Style="{StaticResource BirthDateStyle}"/>

                    </StackPanel>

                </StackPanel>

                <!--// Payment Ammount + Payment Status \\-->
                <StackPanel
                    Orientation="Horizontal">

                    <!--// Payment Ammount \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,5,5,0">

                        <TextBlock
                            Text="Payment Ammount:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <TextBox x:Name="StudentCreateEditPaymentAmmountTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>

                    </StackPanel>

                    <!--// Payment Status \\-->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="10,5,0,0">

                        <TextBlock
                            Text="Payment Status:"
                            FontWeight="SemiBold"
                            Opacity=".75"
                            Style="{StaticResource InfoTextBlockStyle}"/>

                        <!--<TextBox x:Name="StudentCreateEditPaymentStatusTextBox"
                            Width="250"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputStyle}"/>-->

                        <ComboBox x:Name="StudentCreateEditPaymentStatusComboBox"
                            Width="250"
                            Height="35"
                            Margin="0,10,0,0"
                            Foreground="{DynamicResource InputTextForegroundBrush}"
                            Style="{StaticResource InputComboBoxStyle}">

                            <ComboBoxItem Content="Paid"/>
                            <ComboBoxItem Content="Unpaid"/>

                        </ComboBox>

                    </StackPanel>

                </StackPanel>

                <!--// Functional Panel \\-->
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0">

                    <!--// Save Button \\-->
                    <Button
                        Margin="0,0,5,0"
                        Style="{StaticResource SaveButtonStyle}"
                        Click="Save_Click"/>

                    <!--// Cancel Button \\-->
                    <Button
                        Style="{StaticResource CancelButtonStyle}"
                        Click="Cancel_Click"/>

                </StackPanel>

            </StackPanel>

        </Grid>

    </Border>

</UserControl>