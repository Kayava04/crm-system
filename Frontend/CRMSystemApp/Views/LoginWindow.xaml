<Window x:Class="CRMSystemApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRMSystemApp.Views"
        mc:Ignorable="d"
        Height="350"
        Width="600"
        SnapsToDevicePixels="True"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <!--// Fade-in Effect \\-->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1" Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <!--// Login Window \\-->
    <Border
        CornerRadius="20"
        Background="{DynamicResource LoginWindowBackgroundBrush}"
        BorderThickness="2"
        BorderBrush="{DynamicResource LoginWindowBorderBrush}"
        SnapsToDevicePixels="True">

        <Grid>

            <!--// Login Window Markup \\-->
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--// Top Bar Section \\-->
            <Border
                Grid.Row="0"
                Background="{DynamicResource TopBarBackgroundBrush}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderBrushColor}"
                SnapsToDevicePixels="True">

                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

                    <!--// Minimize Window \\-->
                    <Button
                        Style="{StaticResource MinimizeStyle}"
                        Height="42"
                        Width="42"
                        Click="MinimizeWindow_Click"/>

                    <!--// Close Window \\-->
                    <Button
                        Style="{StaticResource CloseStyle}"
                        Height="42"
                        Width="42"
                        Click="CloseWindow_Click"/>

                </StackPanel>

            </Border>

            <!--// Window Name \\-->
            <TextBlock
                Grid.Row="0"
                Text="Authorization"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{DynamicResource PhotoTextBrush}"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Style="{StaticResource InfoTextBlockStyle}"
                SnapsToDevicePixels="True"/>

            <!--// Main Content Section \\-->
            <StackPanel
                Grid.Row="1"
                Orientation="Vertical"
                VerticalAlignment="Center">

                <!--// Username \\-->
                <StackPanel
                    Orientation="Vertical"
                    HorizontalAlignment="Center">

                    <TextBlock
                        Text="Username:"
                        FontWeight="SemiBold"
                        Opacity=".75"
                        Style="{StaticResource InfoTextBlockStyle}"/>

                    <TextBox x:Name="LoginUsernameTextBox"
                        Width="250"
                        Margin="0,10,0,0"
                        Foreground="{DynamicResource InputTextForegroundBrush}"
                        Style="{StaticResource InputStyle}"/>

                </StackPanel>

                <!--// Password \\-->
                <StackPanel
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Margin="0,10">

                    <TextBlock
                        Text="Password:"
                        FontWeight="SemiBold"
                        Opacity=".75"
                        Style="{StaticResource InfoTextBlockStyle}"/>

                    <PasswordBox x:Name="LoginPasswordTextBox"
                        Width="250"
                        Margin="0,10,0,0"
                        Foreground="{DynamicResource InputTextForegroundBrush}"
                        Style="{StaticResource InputPasswordStyle}"/>

                </StackPanel>

                <!--// Action Buttons \\-->
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10">

                    <!--// Login Button \\-->
                    <Button
                        Margin="0,0,10,0"
                        Style="{StaticResource LoginStyle}"
                        Click="LoginButton_Click"/>

                    <!--// Register Button \\-->
                    <Button
                        Style="{StaticResource RegisterStyle}"
                        Click="RegistrationButton_Click"/>

                </StackPanel>

            </StackPanel>

        </Grid>

    </Border>

</Window>